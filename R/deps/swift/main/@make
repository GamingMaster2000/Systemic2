#!/bin/csh

# USERS MUST CHANGE THESE !!!!!!
set SWIFT_DIR=.
set FORTRAN=/usr/local/bin/gfortran
set FFLAGS='-O3 -L../'

# To Profile the code:
#set FFLAGS='-G -c'


foreach file (*.f)
    echo $file | set file2=`awk -F"." '{print$1}'`
    echo $file2
    $FORTRAN $FFLAGS "$file2".f -o "$file2"  -L/usr/local/lib -lswift
end

rm *.o
echo Done directory $PWD 

